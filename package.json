"dist": "electron-builder --win nsis"
},
"author": "Your Name",
"license": "MIT",
"dependencies": {},
"devDependencies": {
"electron": "^25.0.0",
"electron-builder": "^24.0.0"
},
"build": {
"appId": "com.yourname.wartune-multiclient",
"productName": "Wartune Multiclient",
"files": ["**/*"],
"directories": {"output": "dist"},
"win": {
"target": ["nsis"]
},
"nsis": {
"oneClick": false,
"perMachine": false,
"allowElevation": true,
"allowToChangeInstallationDirectory": true
}
}
}
